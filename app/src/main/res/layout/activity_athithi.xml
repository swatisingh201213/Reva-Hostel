<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dullwhite"
    tools:context=".Hreva">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/lightorange"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Atithi"
                android:layout_marginTop="60dp"
                android:textColor="@color/dullwhite"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@color/colorblack"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:src="@drawable/athithimain" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18sp"
                android:layout_marginTop="10sp"
                android:fontFamily="sans-serif"
                android:text="REVA Guest House (ATITHI) is the accommodation for the parents who would like to visit their children regularly. University has provided this guest house with all the standards facilities."
                android:textColor="@color/colorblack"
                android:textSize="18sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack"
                android:paddingLeft="18sp"
                android:drawableLeft="@drawable/bullet"
                android:drawablePadding="5sp"
                android:layout_marginTop="15sp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:text="AC/Non-AC Rooms "
                android:layout_marginLeft="8sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack"
                android:paddingLeft="18sp"
                android:drawableLeft="@drawable/bullet"
                android:drawablePadding="5sp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:text="Wi-Fi Support"
                android:layout_marginLeft="8sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginLeft="8sp"
                android:drawableLeft="@drawable/bullet"
                android:drawablePadding="5sp"
                android:fontFamily="sans-serif"
                android:paddingLeft="18sp"
                android:text="Pre-Booked Rooms (Booking required)"
                android:textColor="@color/colorblack"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="40sp"
                android:layout_marginRight="40sp"
                android:layout_marginLeft="40sp"
                android:src="@drawable/reception2"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10sp"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:text="Atithi Reception"
                android:textColor="@color/colorblack"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="40sp"
                android:layout_marginRight="40sp"
                android:layout_marginLeft="40sp"
                android:src="@drawable/lobby2"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:text="Atithi Lobby"
                android:textColor="@color/colorblack"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="40sp"
                android:layout_marginRight="40sp"
                android:layout_marginLeft="40sp"
                android:src="@drawable/bed2"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:text="A/C Room"
                android:textColor="@color/colorblack"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="40sp"
                android:layout_marginRight="40sp"
                android:layout_marginLeft="40sp"
                android:src="@drawable/doublebed"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:text="Non-A/C Room"
                android:textColor="@color/colorblack"
                android:textSize="18sp" />




        </LinearLayout>
    </ScrollView>
</FrameLayout>
